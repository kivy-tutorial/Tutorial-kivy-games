#:kivy 1.10.0

Manager:
    Menu:
        name: 'menu'
    Game:
        name: 'game'
    GameOver:
        name: 'gameOver'

<MenuButton@Button>:
    font_size: '50sp'
    background_normal: 'img/menuButton.png'
    background_down: 'img/menuButtonPressed.png'
    # border: 120, 120, 120, 120
    border: 50, 50, 50, 50
    # border: 80, 80, 80, 80

<Menu>:
    BoxLayout:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'img/menuBackground.png'

        orientation: 'vertical'
        padding: '200dp', '50dp'
        spacing: '150dp'
        Widget:        
        BoxLayout:
            padding: '100dp'
            spacing: '150dp'
            MenuButton:
                text: 'Start'
                on_release: app.root.current = 'game'
            MenuButton:
                text: 'Exit'
                on_release: app.stop()

<Player>:
    source: 'img/player.png'

<Game>:
    FloatLayout:
        Player:
            id: player
            allow_stretch: True
            size_hint: None, None
            size: root.height/15, root.height/15
            x: root.width/20
            y: root.height/2

<GameOver>:
    BoxLayout:
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'img/gameOver.png'
        orientation: 'vertical' 
        # padding: '600dp', '70dp'
        padding: '450dp', '20dp'
        # spacing: '150dp'
        spacing: '80dp'
        Widget:
            # size_hint_y: 1.5
            size_hint_y: 1
        MenuButton:
            text: 'Try again!'
            on_release: app.root.current = 'game'            
        MenuButton:
            text: 'Exit'
            on_release: app.stop()
